{
  "name": "metastreet-v2-contracts",
  "version": "0.1.0",
  "description": "MetaStreet Pool v2 Contracts",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol' && eslint .",
    "format": "prettier --write .",
    "size": "hardhat size-contracts",
    "analyze": "slither --filter-paths 'node_modules|contracts/test' .",
    "deployment-manager": "ts-node --files scripts/deployment-manager.ts",
    "node": "hardhat node"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ledger": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/merkle-tree": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "commander": "^12.1.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "hardhat": "^2.22.8",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-tracer": "^3.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.1.1",
    "solhint": "^5.0.3",
    "solhint-plugin-prettier": "^0.1.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.9.6"
  }
}
